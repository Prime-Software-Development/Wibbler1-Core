{% extends "secured.twig" %}

{% set web1_js_files = web1_js_files is defined ? web1_js_files : {} %}
{% set web1_js_files = { "base_search" : [Options.DataPath ~ '/index.js', Options.DataPath ~ '/manage.js'] } | merge( web1_js_files ) %}

{% block MainContentBlock %}
    {% include "_search/settings.twig" with {'ContainerClass': 'Search'} %}

    {% block SearchBar %}
        {% include "_search/search_bar.twig" %}
    {% endblock %}

    <div class="panel_content">

        {# Allows text to be displayed above the main search area #}
        {% block search_pre %}
        {% endblock %}

        {# Main search area - results will be within the block #}
        {% block search_body %}
        {% endblock %}

        {# Allows text to be displayed below the main search area #}
        {% block search_after %}
        {% endblock %}

    </div>
{% endblock %}