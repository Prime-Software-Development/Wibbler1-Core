{% extends "base.twig" %}

{% block Body %}
<div>
	{% if message %}
		<div class='error'>
			{{ message }}
		</div>
	{% endif %}
	<form method="post">
		<input type="hidden" name="login_action" value="login" />
		<p>
			<label>Username</label>
			<input type="text" name="username" />
		</p>
		<p>
			<label>Password</label>
			<input type="password" name="password" />
		</p>

		<p>
			<input type="submit" value="Login">
		</p>
	</form>
</div>
{% endblock %}