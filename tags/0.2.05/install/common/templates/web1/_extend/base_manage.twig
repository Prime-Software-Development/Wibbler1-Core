{% set IsSearchPage = false %}
{% extends "_extend/base_extend.twig" %}

{% block RealContentBlock %}

    <form class="form form-manage" data-toggle="validator">

        <input type="hidden" name="ObjectId" class="ObjectId" value="{{ Options.ObjectId }}" />
        <input type="hidden" name="ParentId" class="ParentId" value="{{ Options.ParentObjectId }}" />
        <input type="hidden" name="ParentType" class="ParentType" value="{{ Options.ParentObjectType }}" />

        {% block ManageInfo %}
            <div class="panel panel-default">
                <div class="panel-body bg-warning">
                    <div class="col-xs-12" style="font-size: 1.3em;">
                        {% block ManageBlock %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        {% endblock %}

        {% block ManageContents %}
        {% endblock %}
    </form>

	{% block Footer %}
        <div class="navbar navbar-default navbar-fixed-bottom navbar-inverse col-xs-12" style="opacity: 0.4;">
            <div class="container-fluid">
                <form class="navbar-header navbar-form navbar-right">
                    {% block FooterButtons %}
                        <button type="button" class="btn btn-warning btn-sm btn-cancel">Cancel</button>
                        <button type="button" class="btn btn-success btn-sm btn-save">Save</button>
                    {% endblock %}
                </form>
            </div>
        </div>
    {% endblock %}

{% endblock %}